    "homepage": "https://github.com/doersf/bitcoin-php",
    "license": "Unlicense",
    "authors": [
	{
	    "name": "Thomas Kerin",
	    "homepage": "https://thomaskerin.io",
	    "role": "Author"
	},
	{
